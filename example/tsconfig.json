{
  "compilerOptions": {
    "declaration": true,
    "newLine": "lf",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDir": "./src",
    "plugins": [
      {
        "transform": "../",
        "after": true,
        "afterDeclarations": true,
        "type": "config",
        "nodeModulesDir": "./node_modules",
        "baseDir": "./dist"
      }
    ]
  }
}
